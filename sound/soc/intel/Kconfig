	tristate
	select SND_SOC_INTEL_COMMON
	select SND_SOC_INTEL_SST_ACPI if ACPI
	select SND_SOC_ACPI_INTEL_MATCH if ACPI

config SND_SOC_INTEL_SST_FIRMWARE
	tristate
	select DW_DMAC_CORE

